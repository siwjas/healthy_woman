<%= render 'account/shared/page' do |page| %>
  <% page.title t('.section') %>
  <% page.body do %>
    <%= cable_ready_updates_for @article do %>
      <%= render 'account/shared/box', divider: true do |box| %>
        <% box.title t('.header') %>
        <% box.description do %>
          <%= t('.description', 
                article_name: @article.title, 
                category_name: t('articles.no_category')) %>
          <%= t('.manage_description', 
                article_name: @article.title, 
                category_name: t('articles.no_category')) if can? :manage, @article %>
        <% end %>

        <% box.body do %>
          <% with_attribute_settings object: @article, strategy: :label do %>
            <%= render 'shared/attributes/text', attribute: :title %>
            <%= render 'shared/attributes/html', attribute: :content %>
            <%= render 'shared/attributes/option', attribute: :published %>
            <%= render 'shared/attributes/image', attribute: :cover_image %>
            <%# ðŸš… super scaffolding will insert new fields above this line. %>
          <% end %>
        <% end %>

        <% box.actions do %>
          <%= link_to t('.buttons.edit'), [:edit, :account, @article], class: first_button_primary if can? :edit, @article %>
          <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
          <%= button_to t('.buttons.destroy'), [:account, @article], method: :delete, class: first_button_primary, data: { confirm: t('.buttons.confirmations.destroy', model_locales(@article)) } if can? :destroy, @article %>
          <% if @article.categories.any? %>
            <%= link_to t('global.buttons.back'), [:account, @article.categories.first, :articles], class: first_button_primary %>
          <% else %>
            <%= link_to t('global.buttons.back'), account_team_articles_articles_path(current_team), class: first_button_primary %>
          <% end %>
        <% end %>

        <% box.raw_footer do %>
          <%# ðŸš… super scaffolding will insert new action model index views above this line. %>
        <% end %>
      <% end %>
    <% end %>

    <%# ðŸš… super scaffolding will insert new children above this line. %>
  <% end %>
<% end %>
