<% content_for :breadcrumbs do %>
  <%= render "shared/breadcrumb", current: "Editar Calculadora de Gravidez", parents: [
    {label: "Calculadoras de Gravidez", url: account_team_pregnancy_calculators_path(current_team)},
    {label: "Detalhes", url: account_pregnancy_calculator_path(@pregnancy_calculator)}
  ] %>
<% end %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Editar Calculadora de Gravidez</h1>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <%= form_with(model: [:account, @pregnancy_calculator], local: true) do |form| %>
        <% if @pregnancy_calculator.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@pregnancy_calculator.errors.count, "erro") %> impediram que esta calculadora fosse salva:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5">
                    <% @pregnancy_calculator.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= form.label :last_menstrual_period_date, "Data da última menstruação", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.date_field :last_menstrual_period_date, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Esta data será usada para calcular a idade gestacional e a data provável do parto.</p>
          </div>

          <div class="sm:col-span-6">
            <%= form.label :notes, "Observações", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_area :notes, rows: 4, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Informações adicionais ou sintomas relevantes.</p>
          </div>
        </div>

        <div class="mt-6 flex justify-end">
          <%= link_to "Cancelar", account_pregnancy_calculator_path(@pregnancy_calculator), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-3" %>
          <%= form.submit "Atualizar", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
