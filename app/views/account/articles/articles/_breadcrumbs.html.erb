<% breadcrumbs ||= [] %>
<% breadcrumbs << { label: t('account.articles.articles.breadcrumbs.home'), url: main_app.account_dashboard_path } %>
<% breadcrumbs << { label: t('account.articles.articles.breadcrumbs.articles'), url: [:account, current_team, :articles_articles] } %>

<% if @article %>
  <% breadcrumbs << { label: @article.title, url: [:account, @article] } %>
<% end %>

<% breadcrumbs.each do |breadcrumb| %>
  <%= render 'account/shared/breadcrumb', label: breadcrumb[:label], url: breadcrumb[:url] %>
<% end %>
