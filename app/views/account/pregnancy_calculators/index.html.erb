<% content_for :breadcrumbs do %>
  <%= render "shared/breadcrumb", current: "Calculadoras de Gravidez" %>
<% end %>

<% content_for :actions do %>
  <%= link_to "Nova Calculadora", new_account_team_pregnancy_calculator_path(current_team), class: "btn btn-primary" %>
<% end %>

<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-6">Calculadoras de Gravidez</h1>

  <% if @pregnancy_calculators.any? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md">
      <ul class="divide-y divide-gray-200">
        <% @pregnancy_calculators.each do |calculator| %>
          <li>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="text-sm font-medium text-indigo-600 truncate">
                  <%= link_to "Gravidez - #{calculator.last_menstrual_period_date.strftime('%d/%m/%Y')}", account_pregnancy_calculator_path(calculator), class: "hover:underline" %>
                </div>
                <div class="ml-2 flex-shrink-0 flex">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= "#{calculator.weeks} semanas e #{calculator.days} dias" %>
                  </span>
                </div>
              </div>
              <div class="mt-2 sm:flex sm:justify-between">
                <div class="sm:flex">
                  <div class="flex items-center text-sm text-gray-500">
                    <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    Data prevista do parto: <%= calculator.due_date.strftime('%d/%m/%Y') %>
                  </div>
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                  </svg>
                  Trimestre: <%= calculator.current_trimester %>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% else %>
    <div class="bg-white shadow overflow-hidden sm:rounded-md p-6 text-center">
      <p class="text-gray-500">Você ainda não tem calculadoras de gravidez.</p>
      <p class="mt-2">
        <%= link_to "Criar nova calculadora", new_account_team_pregnancy_calculator_path(current_team), class: "text-indigo-600 hover:text-indigo-900" %>
      </p>
    </div>
  <% end %>
</div>
