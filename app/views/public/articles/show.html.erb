<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <a href="<%= articles_path %>" class="text-indigo-600 hover:text-indigo-800 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Voltar para todos os artigos
    </a>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <% if @article.cover_image.attached? %>
      <div class="w-full flex justify-center">
        <%= image_tag @article.cover_image.variant(resize_to_limit: [1200, 600]), class: "w-full h-auto object-cover mx-auto" %>
      </div>
    <% end %>
    <div class="px-4 py-5 sm:px-6">
      <h1 class="text-2xl font-bold text-gray-900"><%= @article.title %></h1>
      <div class="mt-2 flex flex-wrap items-center text-sm text-gray-500">
        <% if @article.categories.any? %>
          <% @article.categories.each do |category| %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800 mr-2 mb-2">
              <%= category.name %>
            </span>
          <% end %>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800 mr-2 mb-2">
            Sem categoria
          </span>
        <% end %>
        <span><%= @article.created_at.strftime("%d/%m/%Y") %></span>
      </div>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <div class="prose max-w-none">
        <%= @article.content %>
      </div>
    </div>
  </div>
</div>
