<% if can? :read, Articles::Category.new(team: current_team) %>
  <%= render 'account/shared/menu/item', {
    url: main_app.polymorphic_path([:account, current_team, :articles_categories]),
    label: t('articles/categories.navigation.label'),
  } do |p| %>
    <% p.icon do %>
      <i class="<%= t('articles/categories.navigation.icon') %>"></i>
    <% end %>
  <% end %>
<% end %>
