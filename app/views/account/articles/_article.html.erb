<% team = @team || @team %>
<% context ||= team %>
<% collection ||= :articles %>
<% hide_actions ||= false %>
<% hide_back ||= false %>

<% with_attribute_settings object: article do %>
  <tr data-id="<%= article.id %>">
    <%= render "shared/tables/checkbox", object: article %>
    <td><%= render 'shared/attributes/text', attribute: :title, url: [:account, article] %></td>
    <%# ðŸš… super scaffolding will insert new fields above this line. %>
    <td><%= render 'shared/attributes/date_and_time', attribute: :created_at %></td>
    <td class="buttons">
      <% unless hide_actions %>
        <% if can? :edit, article %>
          <%= link_to t('.buttons.shorthand.edit'), [:edit, :account, article], class: 'button-secondary button-smaller' %>
        <% end %>
        <% if can? :destroy, article %>
          <%= button_to t('.buttons.shorthand.destroy'), [:account, article], method: :delete, data: { confirm: t('.buttons.confirmations.destroy', model_locales(article)) }, class: 'button-secondary button-smaller' %>
        <% end %>
        <%# ðŸš… super scaffolding will insert new action model buttons above this line. %>
      <% end %>
    </td>
  </tr>
<% end %>
