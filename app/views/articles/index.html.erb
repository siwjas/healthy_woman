<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Artigos</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
    <div class="md:col-span-2">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
        <div class="px-4 py-5 sm:px-6">
          <h2 class="text-xl font-bold text-gray-900">Artigos Recentes</h2>
        </div>
        <div class="border-t border-gray-200">
          <% if @articles.any? %>
            <ul class="divide-y divide-gray-200">
              <% @articles.each do |article| %>
                <li class="p-4 hover:bg-gray-50">
                  <a href="<%= article_path(article) %>" class="block">
                    <div class="flex items-center space-x-4">
                      <div class="flex-1 min-w-0">
                        <p class="text-lg font-medium text-indigo-600 truncate"><%= article.title %></p>
                        <p class="text-sm text-gray-500">Categoria: <%= article.category.name %></p>
                        <p class="mt-1 text-sm text-gray-500"><%= article.created_at.strftime("%d/%m/%Y") %></p>
                      </div>
                      <div>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </a>
                </li>
              <% end %>
            </ul>
          <% else %>
            <div class="p-4 text-center text-gray-500">
              Nenhum artigo dispon√≠vel no momento.
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="md:col-span-1">
      <div class="bg-white shadow overflow-hidden sm:rounded-lg sticky top-4">
        <div class="px-4 py-5 sm:px-6">
          <h2 class="text-xl font-bold text-gray-900">Categorias</h2>
        </div>
        <div class="border-t border-gray-200">
          <ul class="divide-y divide-gray-200">
            <% @categories.each do |category| %>
              <li>
                <a href="<%= category_articles_path(category) %>" class="block px-4 py-3 hover:bg-gray-50">
                  <div class="flex items-center justify-between">
                    <span class="text-sm font-medium text-gray-900"><%= category.name %></span>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                      <%= category.articles.count %>
                    </span>
                  </div>
                </a>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
